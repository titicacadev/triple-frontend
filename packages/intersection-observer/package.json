    "lint:style": "stylelint 'src/**/*.{js,ts,tsx}'",
    "lint:style:fix": "stylelint 'src/**/*.{js,ts,tsx}' --fix",
    "lint:etc": "prettier src --check",
    "lint:etc:fix": "prettier src --write"
  },
  "lint-staged": {
    "*": [
      "prettier --check"
    ],
    "*.{js,ts,tsx}": [
      "eslint"
    ]

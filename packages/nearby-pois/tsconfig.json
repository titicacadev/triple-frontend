{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@titicaca/core-elements": ["../core-elements/src"],
      "@titicaca/core-elements/*": ["../core-elements/src/app-directory/*"],
      "@titicaca/fetcher": ["../fetcher/src"],
      "@titicaca/fetcher/*": ["../fetcher/src/app-directory/*"],
      "@titicaca/intersection-observer": ["../intersection-observer/src"],
      "@titicaca/intersection-observer/*": [
        "../intersection-observer/src/app-directory/*"
      ],
      "@titicaca/poi-list-elements": ["../poi-list-elements/src"],
      "@titicaca/poi-list-elements/*": [
        "../poi-list-elements/src/app-directory/*"
      ],
      "@titicaca/router": ["../router/src"],
      "@titicaca/router/*": ["../router/src/app-directory/*"],
      "@titicaca/type-definitions": ["../type-definitions/src"],
      "@titicaca/type-definitions/*": [
        "../type-definitions/src/app-directory/*"
      ],
      "@titicaca/view-utilities": ["../view-utilities/src"],
      "@titicaca/view-utilities/*": ["../view-utilities/src/app-directory/*"],
      "@titicaca/i18n": ["../i18n/src"],
      "@titicaca/i18n/*": ["../i18n/src/app-directory/*"],
      "@titicaca/react-contexts": ["../react-contexts/src"],
      "@titicaca/react-contexts/*": ["../react-contexts/src/app-directory/*"]
    }
  },
  "exclude": ["**/node_modules", "lib"]
}

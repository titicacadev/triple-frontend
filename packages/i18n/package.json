{
  "name": "@titicaca/i18n",
  "version": "13.25.0",
  "description": "Triple-frontend Internalization",
  "license": "MIT",
  "homepage": "https://github.com/titicacadev/triple-frontend/tree/main/packages/i18n",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/titicacadev/triple-frontend.git"
  },
  "bugs": {
    "url": "https://github.com/titicacadev/triple-frontend/issues"
  },
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    },
    "./locales/*": {
      "types": "./src/locales/*.ts",
      "import": "./src/locales/*.ts",
      "require": "./src/locales/*.ts"
    }
  },
  "publishConfig": {
    "main": "lib/index.js",
    "module": "lib/index.mjs",
    "types": "lib/index.d.ts",
    "exports": {
      ".": {
        "types": "./lib/index.d.ts",
        "import": "./lib/index.js",
        "require": "./lib/index.cjs"
      },
      "./locales/*": {
        "types": "./lib/locales/*.d.ts",
        "import": "./lib/locales/*.js",
        "require": "./lib/locales/*.cjs"
      }
    }
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "pnpm run build:esm && pnpm run build:cjs && pnpm run build:types",
    "build:esm": "swc src -d lib --ignore **/*.stories.\\(ts\\|tsx\\) --ignore **/*.test.\\(ts\\|tsx\\) --ignore **/*.spec.\\(ts\\|tsx\\) --config-file ../../.swcrc --strip-leading-paths",
    "build:cjs": "swc src -d lib --ignore **/*.stories.\\(ts\\|tsx\\) --ignore **/*.test.\\(ts\\|tsx\\) --ignore **/*.spec.\\(ts\\|tsx\\) --config-file ../../.swcrc --strip-leading-paths --config module.type=commonjs --out-file-extension cjs",
    "build:types": "tsc -p tsconfig.build.json",
    "lint:es": "eslint src",
    "lint:es:fix": "eslint src --fix",
    "lint:etc": "prettier src --check",
    "lint:etc:fix": "prettier src --write"
  },
  "lint-staged": {
    "*": [
      "prettier --check"
    ],
    "*.{js,ts,tsx}": [
      "eslint"
    ]
  }
}

{
  "name": "@titicaca/react-hooks",
  "version": "13.15.0",
  "description": "triple frontend custom hooks",
  "license": "MIT",
  "homepage": "https://github.com/titicacadev/triple-frontend/tree/main/packages/react-hooks",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/titicacadev/triple-frontend.git"
  },
  "bugs": {
    "url": "https://github.com/titicacadev/triple-frontend/issues"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./*": {
      "types": "./src/*/index.ts",
      "default": "./src/*/index.ts"
    }
  },
  "publishConfig": {
    "exports": {
      ".": {
        "types": "./lib/index.d.ts",
        "default": "./lib/index.js"
      },
      "./*": {
        "types": "./src/*/index.d.ts",
        "default": "./src/*/index.js"
      }
    }
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "pnpm run build:cjs && pnpm run build:types",
    "build:cjs": "swc src -d lib --config-file ../../.swcrc",
    "build:types": "tsc -p tsconfig.build.json",
    "lint:es": "eslint src",
    "lint:es:fix": "eslint src --fix",
    "lint:etc": "prettier src --check",
    "lint:etc:fix": "prettier src --write"
  },
  "lint-staged": {
    "*": [
      "prettier --check"
    ],
    "*.{js,ts,tsx}": [
      "eslint"
    ]
  },
  "dependencies": {
    "@titicaca/fetcher": "workspace:*",
    "lottie-web": "^5.12.2",
    "react-fast-compare": "^3.2.2",
    "scroll-to-element": "^2.0.3"
  },
  "devDependencies": {
    "@types/scroll-to-element": "^2.0.4",
    "react": "^18.2.0"
  },
  "peerDependencies": {
    "react": "^18.0"
  }
}

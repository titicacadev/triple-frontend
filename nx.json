{
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx-cloud",
      "options": {
        "cacheableOperations": ["build", "lint:es", "lint:style", "lint:etc"]
      }
    }
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*"],
    "sources": [
      "!{projectRoot}/**/*.test.*",
      "!{projectRoot}/**/*.spec.*",
      "!{projectRoot}/**/*.stories.*"
    ],
    "production": ["default"]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/lib"]
    },
    "lint:es": {
      "inputs": ["default", "{workspaceRoot}/.eslintrc.js"],
      "outputs": []
    },
    "lint:es:etc": {
      "inputs": ["default", "{workspaceRoot}/.eslintrc.js"],
      "outputs": []
    },
    "lint:style": {
      "inputs": [
        "default",
        "{workspaceRoot}/.stylelintrc.json",
        "{workspaceRoot}/.stylelintignore"
      ]
    },
    "lint:style:etc": {
      "inputs": [
        "default",
        "{workspaceRoot}/.stylelintrc.json",
        "{workspaceRoot}/.stylelintignore"
      ]
    },
    "lint:etc": {
      "inputs": [
        "default",
        "{workspaceRoot}/.prettierrc",
        "{workspaceRoot}/.prettierignore"
      ]
    },
    "lint:etc:fix": {
      "inputs": [
        "default",
        "{workspaceRoot}/.prettierrc",
        "{workspaceRoot}/.prettierignore"
      ]
    }
  },
  "$schema": "./node_modules/nx/schemas/nx-schema.json"
}

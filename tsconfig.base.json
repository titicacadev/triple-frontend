{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "emitDeclarationOnly": true,
    "types": ["react", "node", "jest"]
  },
  "exclude": ["node_modules", "lib", "**/*.test.*", "**/*.spec.*"]
}

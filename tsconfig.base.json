{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6", "dom"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "emitDeclarationOnly": true,
    "types": ["react", "node", "jest"],
    "composite": true,
    "skipLibCheck": true,
    "declarationMap": true,
    "resolveJsonModule": true
  },
  "include": ["packages/**/*/src", "packages/**/*/src/mocks/**/*.json"],
  "exclude": ["node_modules", "lib"]
}

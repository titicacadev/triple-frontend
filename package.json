{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --no-ci && npm run clean-lock",
    "dev": "npm run build && concurrently --names watch,docs --kill-others 'node build-watch' 'npm run dev-docs'",
    "version": "lerna version --no-push --force-publish",
    "build": "npm run build-resources && npm run build-declarations",
    "build-resources": "lerna exec --ignore @titicaca/triple-frontend-docs 'BABEL_ENV=build babel --root-mode upward src --out-dir lib --source-maps --extensions .ts,.tsx,.js --delete-dir-on-start --no-comments'",
    "build-declarations": "lerna exec --ignore @titicaca/triple-frontend-docs tsc",
    "dev-docs": "lerna exec --scope @titicaca/triple-frontend-docs npm run dev",
    "lint-json": "prettier --check '**/*.json'",
    "lint-es": "eslint '{docs,packages,tests/src}/**/*.{ts,tsx,js,mdx}'",
    "lint-style": "stylelint './**/*.{ts,tsx,js}'",
    "lint": "concurrently --names eslint,stylelint,jsonlint 'npm:lint-es' 'npm:lint-style' 'npm:lint-json'",
    "clean-lock": "lerna exec --ignore @titicaca/triple-frontend-docs -- rm -rf ./package-lock.json",
    "clean": "lerna exec -- rm -rf ./node_modules ./lib ./*.tsbuildinfo"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.10.1",
    "@babel/plugin-proposal-optional-chaining": "^7.10.1",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-react": "^7.10.1",
    "@babel/preset-typescript": "^7.10.1",
    "@babel/runtime": "^7.10.2",
    "@titicaca/eslint-config-triple": "^1.2.0",
    "@types/node": "^12.12.47",
    "@types/react": "^16.9.36",
    "@types/react-dom": "^16.9.8",
    "@types/react-input-mask": "^2.0.5",
    "@types/react-transition-group": "^4.4.0",
    "@types/styled-components": "^5.1.0",
    "babel-plugin-styled-components": "^1.10.6",
    "chokidar": "^3.4.0",
    "concurrently": "^4.1.2",
    "csstype": "^2.6.6",
    "eslint-plugin-mdx": "^1.7.0",
    "husky": "^3.0.5",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.9",
    "lodash.debounce": "^4.0.8",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "styled-components": "^5.1.1",
    "typescript": "^3.9.5",
    "utility-types": "^3.10.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged -q 2> /dev/null"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint",
      "stylelint"
    ],
    "**/*.mdx": [
      "eslint"
    ],
    "**/*.json": [
      "prettier --check"
    ]
  }
}

{
  "name": "root",
  "private": true,
  "engines": {
    "npm": ">= 9.0"
  },
  "scripts": {
    "dev": "npm run storybook",
    "build": "lerna run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean:deps": "rimraf node_modules packages/**/node_modules",
    "clean:build": "rimraf packages/**/lib packages/**/*.tsbuildinfo node_modules/.cache/nx",
    "clean": "npm run clean:build && npm run clean:deps",
    "make-tsconfig": "node scripts/make-tsconfig",
    "make-build-tsconfig": "lerna exec --ignore=@titicaca/frontend-integration-test --parallel -- node \\$LERNA_ROOT_PATH/scripts/make-build-tsconfig.js",
    "sync-deps": "npm run make-tsconfig && npm run make-build-tsconfig",
    "prepare": "[ $PREPARE_HUSKY_DISABLED ] || husky install",
    "postinstall": "npm run sync-deps",
    "version": "lerna version --no-push --force-publish",
    "postversion": "npm install && git commit --amend -a -C HEAD",
    "lint:es": "lerna run lint:es",
    "lint:es:fix": "lerna run lint:es:fix",
    "lint:style": "lerna run lint:style",
    "lint:style:fix": "lerna run lint:style:fix",
    "lint:etc": "lerna run lint:etc",
    "lint:etc:fix": "lerna run lint:etc:fix",
    "lint": "lerna run lint:es,lint:style,lint:etc",
    "lint:fix": "lerna run lint:es:fix,lint:style:fix,lint:etc:fix",
    "storybook": "storybook dev --quiet -p 6006",
    "build-storybook": "storybook build --quiet",
    "chromatic": "chromatic --project-token=CHROMATIC_PROJECT_TOKEN"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^7.0.27",
    "@storybook/addon-docs": "^7.0.27",
    "@storybook/addon-essentials": "^7.0.27",
    "@storybook/addon-links": "^7.0.27",
    "@storybook/nextjs": "^7.0.27",
    "@storybook/react": "^7.0.27",
    "@swc/cli": "0.1.62",
    "@swc/core": "1.3.69",
    "@swc/jest": "0.2.26",
    "@swc/plugin-styled-components": "1.5.69",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@titicaca/eslint-config-triple": "5.0.0",
    "@titicaca/next-i18next": "13.8.5",
    "@titicaca/prettier-config-triple": "1.0.2",
    "@titicaca/stylelint-config-triple": "1.1.0",
    "@types/jest": "^29.5.3",
    "@types/node": "^18.16.19",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/react-test-renderer": "^18.0.0",
    "@types/styled-components": "^5.1.26",
    "browser-assert": "^1.2.1",
    "chromatic": "^6.19.9",
    "csstype": "^3.1.2",
    "eslint": "^8.45.0",
    "eslint-plugin-mdx": "^2.1.0",
    "eslint-plugin-storybook": "^0.6.12",
    "husky": "^8.0.3",
    "i18next": "22.5.1",
    "jest": "^29.6.1",
    "jest-environment-jsdom": "^29.6.1",
    "jest-styled-components": "^7.1.1",
    "lerna": "^7.1.3",
    "lint-staged": "^13.2.3",
    "mockdate": "^3.0.5",
    "msw": "^1.2.2",
    "msw-storybook-addon": "^1.8.0",
    "next": "13.4.7",
    "nx-cloud": "^16.1.0",
    "prettier": "^2.8.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "12.3.1",
    "react-test-renderer": "^18.2.0",
    "rimraf": "^5.0.1",
    "storybook": "^7.0.27",
    "storybook-addon-swc": "^1.2.0",
    "styled-components": "^5.3.11",
    "stylelint": "^15.10.1",
    "ts-jest": "^29.1.1",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "typescript": "5.1.6"
  },
  "workspaces": [
    "packages/*",
    "integration-test"
  ],
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint",
      "prettier --check"
    ],
    "**/*.{json,yaml,md}": [
      "prettier --check"
    ]
  }
}

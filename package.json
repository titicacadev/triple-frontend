{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --no-ci && npm run clean-lock",
    "bootstrap:docs": "lerna bootstrap --scope=@titicaca/triple-frontend-docs --force-local",
    "dev": "npm run build && concurrently --names watch:resources,watch:declarations,docs --kill-others 'npm:watch:resources' 'npm:watch:declarations' 'npm:dev-docs'",
    "watch:resources": "node build-watch",
    "watch:declarations": "npm run build-declarations -- --watch",
    "version": "lerna version --no-push --force-publish",
    "postversion": "npm install && npm run bootstrap:docs && git commit --amend -a -C HEAD",
    "build": "concurrently --names resources,declarations 'npm:build-resources' 'npm:build-declarations'",
    "prebuild": "npm run clean:build",
    "build-resources": "lerna exec --ignore @titicaca/triple-frontend-docs 'BABEL_ENV=build babel --root-mode upward src --out-dir lib --source-maps --extensions .ts,.tsx,.js --no-comments'",
    "build-declarations": "tsc -b packages/*/tsconfig.build.json",
    "build:storybook": "lerna exec --scope @titicaca/triple-frontend-docs 'npm run build'",
    "dev-docs": "lerna exec --scope @titicaca/triple-frontend-docs npm run dev",
    "lint-etc": "prettier --check '**/*.{json,md,yaml}'",
    "lint-etc-fix": "prettier --write '**/*.{json,md,yaml}'",
    "lint-es": "eslint '{docs,packages,tests/src}/**/*.{ts,tsx,js,mdx}'",
    "lint-es-fix": "npm run lint-es -- --fix",
    "lint-style": "stylelint './**/*.{ts,tsx,js}'",
    "lint": "concurrently --names eslint,stylelint,jsonlint 'npm:lint-es' 'npm:lint-style' 'npm:lint-etc'",
    "test": "jest",
    "test:ci": "jest --ci",
    "test:watch": "jest --watch",
    "clean:build": "lerna exec --ignore @titicaca/triple-frontend-docs -- rm -rf ./lib ./*.tsbuildinfo",
    "clean-lock": "lerna exec --ignore @titicaca/triple-frontend-docs -- rm -rf ./package-lock.json",
    "clean": "lerna exec -- rm -rf ./node_modules ./lib ./*.tsbuildinfo",
    "references": "lerna exec --parallel -- node \\$LERNA_ROOT_PATH/scripts/make-references.js",
    "make-build-tsconfig": "lerna exec --ignore @titicaca/triple-frontend-docs --parallel -- node \\$LERNA_ROOT_PATH/scripts/make-build-tsconfig.js",
    "sync-deps:ts": "npm run references && npm run make-build-tsconfig",
    "prepare": "husky install",
    "add": "lerna add --no-bootstrap",
    "postadd": "npm run references && npm run make-build-tsconfig && npm install"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.10.1",
    "@babel/plugin-proposal-optional-chaining": "^7.10.1",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-react": "^7.10.1",
    "@babel/preset-typescript": "^7.10.1",
    "@babel/runtime": "^7.10.2",
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "^11.1.0",
    "@testing-library/react-hooks": "^3.4.2",
    "@titicaca/eslint-config-triple": "^2.4.0",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.12.47",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.8",
    "@types/react-input-mask": "^2.0.5",
    "@types/react-transition-group": "^4.4.0",
    "@types/styled-components": "^5.1.0",
    "babel-plugin-styled-components": "^1.10.6",
    "chokidar": "^3.4.0",
    "concurrently": "^6.0.0",
    "csstype": "^3.0.2",
    "eslint-plugin-mdx": "^1.7.0",
    "husky": "^6.0.0",
    "jest": "^26.6.1",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.9",
    "lodash.debounce": "^4.0.8",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "styled-components": "^5.1.1",
    "typescript": "^3.9.5",
    "utility-types": "^3.10.0"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint",
      "stylelint"
    ],
    "**/*.mdx": [
      "eslint"
    ],
    "**/*.{json,md,yaml}": [
      "prettier --check"
    ]
  },
  "workspaces": [
    "packages/*",
    "docs"
  ]
}

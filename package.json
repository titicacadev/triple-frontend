{
  "name": "root",
  "private": true,
  "engines": {
    "npm": ">= 7"
  },
  "scripts": {
    "dev": "npm run build && concurrently --names watch:resources,watch:declarations,docs --kill-others 'npm:watch:resources' 'npm:watch:declarations' 'npm:dev-docs'",
    "watch:resources": "node scripts/build-watch",
    "watch:declarations": "npm run build-declarations -- --watch",
    "build": "concurrently --names resources,declarations 'npm:build-resources' 'npm:build-declarations'",
    "build:ci": "concurrently --names resources,declarations 'npm:build:resources:babel' 'npm:build-declarations'",
    "prebuild": "npm run clean:build",
    "build-resources": "lerna exec --ignore=@titicaca/triple-frontend-docs --ignore=@titicaca/frontend-integration-test -- swc src -d lib --config-file \\$LERNA_ROOT_PATH/.swcrc",
    "build:resources:babel": "lerna exec --ignore @titicaca/triple-frontend-docs --ignore=@titicaca/frontend-integration-test 'BABEL_ENV=build babel --root-mode upward src --out-dir lib --source-maps --extensions .ts,.tsx,.js --no-comments'",
    "build-declarations": "tsc -b packages/*/tsconfig.build.json",
    "build:storybook": "lerna exec --scope @titicaca/triple-frontend-docs 'npm run build'",
    "dev-docs": "lerna exec --scope @titicaca/triple-frontend-docs npm run dev",
    "test": "jest",
    "test:ci": "jest --ci",
    "test:watch": "jest --watch",
    "test:coverage": "jest --ci --coverage",
    "clean:deps": "lerna exec -- rm -rf ./node_modules && rm -rf node_modules",
    "clean:build": "lerna exec --ignore @titicaca/triple-frontend-docs --ignore=@titicaca/frontend-integration-test -- rm -rf ./lib ./*.tsbuildinfo",
    "clean": "npm run clean:build && npm run clean:deps",
    "make-tsconfig": "lerna exec --parallel -- node \\$LERNA_ROOT_PATH/scripts/make-tsconfig.js",
    "make-build-tsconfig": "lerna exec --ignore @titicaca/triple-frontend-docs --ignore=@titicaca/frontend-integration-test --parallel -- node \\$LERNA_ROOT_PATH/scripts/make-build-tsconfig.js",
    "make-test-tsconfig": "node scripts/make-test-tsconfig",
    "sync-deps": "npm run make-tsconfig && npm run make-build-tsconfig && npm run make-test-tsconfig",
    "prepare": "[ $PREPARE_HUSKY_DISABLED ] || husky install",
    "postinstall": "npm run sync-deps",
    "version": "lerna version --no-push --force-publish",
    "postversion": "npm install && git commit --amend -a -C HEAD",
    "lint:es": "eslint '**/*.{js,ts,tsx,mdx}'",
    "lint:es:fix": "eslint '**/*.{js,ts,tsx,mdx}' --fix",
    "lint:etc": "prettier '**/*.{json,yaml,md}' --check",
    "lint:etc:fix": "prettier '**/*.{json,yaml,md}' --write",
    "lint:style": "stylelint '**/*.{js,ts,tsx}'",
    "lint:style:fix": "stylelint '**/*.{js,ts,tsx}' --fix",
    "lint": "npm run lint:es && npm run lint:etc && npm run lint:style",
    "lint:fix": "npm run lint:es:fix && npm run lint:etc:fix && npm run lint:style:fix"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.10.1",
    "@babel/plugin-proposal-optional-chaining": "^7.10.1",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-react": "^7.10.1",
    "@babel/preset-typescript": "^7.10.1",
    "@babel/runtime": "^7.10.2",
    "@swc/cli": "0.1.55",
    "@swc/core": "1.2.138",
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "^11.1.0",
    "@testing-library/react-hooks": "^3.4.2",
    "@titicaca/eslint-config-triple": "3.0.3",
    "@types/jest": "^27.0.2",
    "@types/node": "^12.12.47",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.8",
    "@types/react-input-mask": "^2.0.5",
    "@types/react-transition-group": "^4.4.0",
    "@types/styled-components": "^5.1.15",
    "babel-jest": "^27.3.1",
    "babel-plugin-styled-components": "^1.10.6",
    "chokidar": "^3.4.0",
    "concurrently": "^6.0.0",
    "csstype": "^3.0.2",
    "eslint-plugin-mdx": "^1.7.0",
    "husky": "^7.0.2",
    "jest": "^27.3.1",
    "jest-styled-components": "^7.0.5",
    "lerna": "^4.0.0",
    "lint-staged": "^11.2.3",
    "lodash.debounce": "^4.0.8",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "styled-components": "^5.3.3",
    "ts-jest": "^27.1.2",
    "typescript": "~4.3.5",
    "utility-types": "^3.10.0"
  },
  "workspaces": [
    "packages/*",
    "docs",
    "integration-test"
  ],
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint"
    ],
    "**/*.{json,yaml,md}": [
      "prettier --check"
    ]
  }
}

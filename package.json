{
  "name": "root",
  "private": true,
  "engines": {
    "node": ">= 16",
    "pnpm": ">= 8"
  },
  "scripts": {
    "dev": "pnpm run storybook",
    "build": "lerna run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean:deps": "rimraf node_modules packages/**/node_modules",
    "clean:build": "rimraf packages/**/lib packages/**/*.tsbuildinfo node_modules/.cache/nx",
    "clean": "pnpm run clean:build && pnpm run clean:deps",
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm",
    "version": "lerna version --force-publish --no-push",
    "lint:es": "lerna run lint:es",
    "lint:es:fix": "lerna run lint:es:fix",
    "lint:style": "lerna run lint:style",
    "lint:style:fix": "lerna run lint:style:fix",
    "lint:etc": "lerna run lint:etc",
    "lint:etc:fix": "lerna run lint:etc:fix",
    "lint": "lerna run lint:es,lint:style,lint:etc",
    "lint:fix": "lerna run lint:es:fix,lint:style:fix,lint:etc:fix",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "chromatic --project-token=CHROMATIC_PROJECT_TOKEN"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.9.0",
    "@storybook/addon-essentials": "^8.6.15",
    "@storybook/addon-links": "^8.6.15",
    "@storybook/addon-onboarding": "^8.6.15",
    "@storybook/addon-webpack5-compiler-swc": "^1.0.6",
    "@storybook/blocks": "^8.6.15",
    "@storybook/nextjs": "^8.6.15",
    "@storybook/preview-api": "^8.6.15",
    "@storybook/react": "^8.6.15",
    "@swc/cli": "0.6.0",
    "@swc/core": "1.10.15",
    "@swc/jest": "0.2.37",
    "@swc/plugin-styled-components": "6.7.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@titicaca/eslint-config-triple": "5.1.1",
    "@titicaca/next-i18next": "13.8.5",
    "@titicaca/prettier-config-triple": "1.1.0",
    "@titicaca/stylelint-config-triple": "1.2.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^18.18.7",
    "@types/react": "^18.2.63",
    "@types/react-dom": "^18.2.20",
    "@types/testing-library__jest-dom": "^5.14.9",
    "browser-assert": "^1.2.1",
    "chromatic": "^11.25.2",
    "csstype": "^3.1.2",
    "eslint": "^8.52.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-jest-dom": "^5.1.0",
    "eslint-plugin-mdx": "^2.2.0",
    "eslint-plugin-storybook": "^0.6.15",
    "eslint-plugin-testing-library": "^6.1.0",
    "husky": "^8.0.3",
    "i18next": "22.5.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-styled-components": "^7.2.0",
    "lerna": "^7.4.2",
    "lint-staged": "^13.3.0",
    "msw": "^1.3.2",
    "msw-storybook-addon": "^1.10.0",
    "next": "^14.2.35",
    "nx-cloud": "16.4.0",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "12.3.1",
    "rimraf": "^5.0.5",
    "storybook": "^8.6.15",
    "storybook-addon-swc": "^1.2.0",
    "storybook-mock-date-decorator": "^1.0.1",
    "styled-components": "^6.1.15",
    "stylelint": "^15.11.0",
    "ts-jest": "^29.1.1",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "typescript": "5.2.2"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint",
      "prettier --check"
    ],
    "**/*.{json,yaml,md}": [
      "prettier --check"
    ]
  }
}
